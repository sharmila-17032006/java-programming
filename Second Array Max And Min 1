import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int size = sc.nextInt();
        int a[] = new int[size];

        for (int i = 0; i < size; i++) {
            a[i] = sc.nextInt();
        }
        int even = (size + 1) / 2;
        int odd = size / 2;
        int[] evenArr = new int[even];
        int[] oddArr = new int[odd];
        int evenPos = 0, oddPos = 0;
        for (int i = 0; i < size; i++) {
            if (i % 2 == 0) {
                evenArr[evenPos++] = a[i];
            } else {
                oddArr[oddPos++] = a[i];
            }
        }
        Arrays.sort(evenArr);
        Arrays.sort(oddArr);
        int k = evenArr[even - 2];
        int k1 = oddArr[1];
        int sum = k + k1;
        System.out.println("Sum=" + sum);
    }
}
 
